<UserControl x:Class="RevitConduitTable.WPF.View.EditColumsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitConduitTable.WPF.View"
             mc:Ignorable="d" 
             MinHeight="150"
             MinWidth="200">

    <Grid Background="White">
        <TextBox x:Name="EditTextBox" Text="{Binding EditedText, UpdateSourceTrigger=PropertyChanged}" Margin="10,35,10,0" Height="20" VerticalAlignment="Top"/>
        <Button Content="Save" Command="{Binding SaveCommand}" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="80" Margin="10,0,0,10"/>
        <Button Content="Cancel" Command="{Binding CancelCommand}" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="95" Margin="0,0,10,10"/>
    </Grid>
</UserControl>
