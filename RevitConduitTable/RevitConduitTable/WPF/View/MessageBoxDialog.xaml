<UserControl x:Class="RevitConduitTable.WPF.View.MessageBoxDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitConduitTable.WPF.View"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Message}" Margin="10" FontSize="16" FontWeight="Bold"/>
            <Button Content="OK" Command="{Binding OKCommand}" Height="30" Width="80" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
